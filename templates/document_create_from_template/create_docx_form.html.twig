{% extends 'base_dashboard.html.twig' %}

{% block title %}Создание документа из формы{% endblock %}

{% block sidebar_list %}
    {% include 'sidebar/sidebar_list.html.twig' %}
{% endblock %}

{% block main %}

    <h1 class="mb-0">Создание документа из формы</h1>

    <section id="multiple-column-form">
        <div class="row match-height">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Форма создания документа</h4>
                    </div>
                    <div class="card-content">
                        <div class="card-body">
                            <form action="{{ path('app_document_create_from_form_action') }}" method="post" class="form">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('create_docx_form') }}">

                                {% for message in app.flashes('error') %}
                                    <div class="alert alert-danger">{{ message }}</div>
                                {% endfor %}
                                {% for message in app.flashes('success') %}
                                    <div class="alert alert-success">{{ message }}</div>
                                {% endfor %}

                                <div class="row">
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label for="company_name">Company Name</label>
                                            <input type="text" id="company_name" class="form-control" name="company_name" value="{{ form_data.company_name|default('') }}">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label for="client_name">Client Name</label>
                                            <input type="text" id="client_name" class="form-control" name="client_name" value="{{ form_data.client_name|default('') }}">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label for="amount">Amount</label>
                                            <input type="text" id="amount" class="form-control" name="amount" value="{{ form_data.amount|default('') }}">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label for="contract_date">Contract Date</label>
                                            <input type="date" id="contract_date" class="form-control" name="contract_date" value="{{ form_data.contract_date|default('') }}">
                                        </div>
                                    </div>
                                    <div class="col-12 d-flex justify-content-end">
                                        <button type="submit" class="btn btn-primary me-1 mb-1">Создать документ</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
