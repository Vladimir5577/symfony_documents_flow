{% extends 'base_dashboard.html.twig' %}

{% block title %}Канбан доски{% endblock %}

{% block sidebar_list %}
    {% include 'sidebar/sidebar_list.html.twig' %}
{% endblock %}

{% block main %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="mb-0">Канбан доски</h1>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createBoardModal">
            <i class="bi bi-plus-lg me-1"></i>
            Создать доску
        </button>
    </div>

    <section class="section" id="boards-table-section">
        <div class="card">
            <div class="card-content">
                {% if boards|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Название</th>
                                <th>Создана</th>
                                <th>Обновлена</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for board in boards %}
                                <tr data-href="{{ path('app_kanban_board', {id: board.id}) }}" role="button" tabindex="0" class="board-row">
                                    <td>
                                        <i class="bi bi-kanban me-2 text-primary"></i>
                                        {{ board.title }}
                                    </td>
                                    <td class="text-muted">{{ board.createdAt ? board.createdAt|date('d.m.Y H:i') : '—' }}</td>
                                    <td class="text-muted">{{ board.updatedAt ? board.updatedAt|date('d.m.Y H:i') : '—' }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% else %}
                <div class="card-body text-center py-5">
                    <i class="bi bi-kanban fs-1 text-muted"></i>
                    <p class="text-muted mt-3 mb-0">У вас пока нет досок. Создайте первую!</p>
                </div>
                {% endif %}
            </div>
        </div>
    </section>

    {# Create Board Modal #}
    <div class="modal fade" id="createBoardModal" tabindex="-1">
        <div class="modal-dialog">
            <form method="post" action="{{ path('app_kanban_board_create') }}">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Новая доска</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="boardTitle" class="form-label">Название</label>
                            <input type="text" class="form-control" id="boardTitle" name="title" required maxlength="200" autofocus placeholder="Например: Проект Договоры">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Отмена</button>
                        <button type="submit" class="btn btn-primary">Создать</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script>
        document.querySelectorAll('#boards-table-section tr[data-href]').forEach(function(row) {
            row.addEventListener('click', function() { window.location.href = this.dataset.href; });
            row.addEventListener('keydown', function(e) {
                if (e.key === 'Enter' || e.key === ' ') { e.preventDefault(); window.location.href = this.dataset.href; }
            });
        });
    </script>
    <style>#boards-table-section tr[data-href] { cursor: pointer; }</style>
{% endblock %}
