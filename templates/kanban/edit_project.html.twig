{% extends 'base_dashboard.html.twig' %}

{% block title %}Редактирование проекта: {{ project.name }}{% endblock %}

{% block sidebar_list %}
    {% include 'sidebar/sidebar_list.html.twig' %}
{% endblock %}

{% block main %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Редактирование проекта</h1>
        <a href="{{ path('app_kanban_project', {id: project.id}) }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-1"></i>
            К проекту
        </a>
    </div>

    <section class="section">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">{{ project.name }}</h4>
            </div>
            <div class="card-content">
                <div class="card-body">
                    <form action="{{ path('app_kanban_edit_project', {id: project.id}) }}" method="post" class="form">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('edit_kanban_project') }}">

                        {% for message in app.flashes('error') %}
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                {{ message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endfor %}

                        <div class="mb-3">
                            <label class="form-label" for="project_name">Название проекта</label>
                            <input type="text" id="project_name" name="name" class="form-control" value="{{ form_data.name|default(project.name)|e('html_attr') }}" required maxlength="255">
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="project_description">Описание</label>
                            <textarea id="project_description" name="description" class="form-control" rows="4">{{ form_data.description|default(project.description) }}</textarea>
                        </div>
                        <div class="d-flex justify-content-end gap-2">
                            <button type="submit" class="btn btn-primary">Сохранить</button>
                            <a href="{{ path('app_kanban_project', {id: project.id}) }}" class="btn btn-light-secondary">Отмена</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
