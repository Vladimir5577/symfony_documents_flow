{% extends 'base_dashboard.html.twig' %}

{% block title %}Личные проекты{% endblock %}

{% block sidebar_list %}
    {% include 'sidebar/sidebar_list.html.twig' %}
{% endblock %}

{% block main %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="mb-0">Личные канбан проекты</h1>
        <a href="{{ path('app_kanban_create_project') }}" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i>
            Создать проект
        </a>
    </div>

    <section class="section" id="projects-table-section">
        <div class="card">
            <div class="card-content">
                {% if projects|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                            <tr>
                                <th>Название</th>
                                <th>Создан</th>
                                <th>Обновлён</th>
                                <th class="text-end" style="width: 1%"></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for project in projects %}
                                <tr data-href="{{ project.boards|length > 0 ? path('app_kanban_board', {id: project.boards|first.id}) : path('app_kanban_project', {id: project.id}) }}" role="button" tabindex="0" class="project-row">
                                    <td>
                                        <i class="bi bi-folder2 me-2 text-primary"></i>
                                        {{ project.name }}
                                    </td>
                                    <td class="text-muted">{{ project.createdAt ? project.createdAt|date('d.m.Y H:i') : '—' }}</td>
                                    <td class="text-muted">{{ project.updatedAt ? project.updatedAt|date('d.m.Y H:i') : '—' }}</td>
                                    <td class="text-end">
                                        <a href="{{ path('app_kanban_project', {id: project.id}) }}" class="btn btn-sm btn-warning text-dark rounded-3 project-edit-btn d-inline-flex align-items-center flex-nowrap" title="Редактировать">
                                            <i class="bi bi-pencil-square me-1"></i><span>Редактировать</span>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="card-body text-center py-5">
                        <i class="bi bi-folder2 fs-1 text-muted"></i>
                        <p class="text-muted mt-3 mb-0">У вас пока нет проектов. Создайте первый!</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </section>

    <script>
        document.querySelectorAll('#projects-table-section tr[data-href]').forEach(function(row) {
            row.addEventListener('click', function(e) {
                if (e.target.closest('.project-edit-btn')) return;
                window.location.href = this.dataset.href;
            });
            row.addEventListener('keydown', function(e) {
                if (e.target.closest('.project-edit-btn')) return;
                if (e.key === 'Enter' || e.key === ' ') { e.preventDefault(); window.location.href = this.dataset.href; }
            });
        });
    </script>
    <style>#projects-table-section tr[data-href] { cursor: pointer; }</style>
{% endblock %}
