{% extends 'base_dashboard.html.twig' %}

{% block title %}Исходящие документы!{% endblock %}



{% block sidebar_list %}
    {% include 'sidebar/sidebar_list.html.twig' %}
{% endblock %}



{% block main %}
    <h1>Исходящие документы</h1>

    <section class="section">
        <div class="card">
            <div class="card-body">
                {% if documents is defined and documents|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Название</th>
                                    <th>Тип</th>
                                    <th>Организация</th>
                                    <th>Дата создания</th>
                                    <th>Срок</th>
                                    <th>Статус</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for doc in documents %}
                                    <tr>
                                        <td>{{ doc.name }}</td>
                                        <td>{{ doc.documentType ? doc.documentType.name : '—' }}</td>
                                        <td>{{ doc.organizationCreator ? doc.organizationCreator.name : '—' }}</td>
                                        <td>{{ doc.createdAt ? doc.createdAt|date('d.m.Y H:i') : '—' }}</td>
                                        <td>{{ doc.deadline ? doc.deadline|date('d.m.Y') : '—' }}</td>
                                        <td>{{ doc.status ? doc.status.label : '—' }}</td>
                                        <td>
                                            <a href="{{ path('app_view_document', {id: doc.id}) }}" class="btn btn-sm btn-outline-primary">Просмотр</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <p class="text-muted mb-0">Нет исходящих документов.</p>
                {% endif %}
            </div>
        </div>
    </section>
{% endblock %}
