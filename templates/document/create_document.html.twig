{% extends 'base_dashboard.html.twig' %}

{% block title %}Создание документа: {{ document_type.name }}{% endblock %}



{% block sidebar_list %}
    {% include 'sidebar/sidebar_list.html.twig' %}
{% endblock %}



{% block main %}

    {#  style for multichoice  #}
    <link rel="stylesheet" href="/front_end/assets/compiled/css/choices.min.css">

    <style>
        .document-create-filedrop {
            min-height: 140px;
            border: 2px dashed var(--bs-border-color, rgba(0,0,0,.175));
            background: var(--bs-body-bg);
            padding: 1.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: border-color .2s, background-color .2s;
        }
        .document-create-filedrop:hover,
        .document-create-filedrop.document-create-filedrop-dragover {
            border-color: var(--bs-primary);
            background: color-mix(in srgb, var(--bs-primary) 8%, var(--bs-body-bg));
        }
        .document-create-filedrop-text { color: var(--bs-secondary-color); font-size: 0.95rem; }
        #document_files_list .list-group-item { padding: 0.5rem 0.75rem; }
    </style>

    <h1>Создание документа: {{ document_type.name }}</h1>

    <section id="multiple-column-form">
        <div class="row match-height">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Форма создания документа</h4>
                    </div>
                    <div class="card-content">
                        <div class="card-body">
                            <form action="{{ path('app_create_document', {'type_id': document_type.id}) }}" method="post" class="form" enctype="multipart/form-data">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('create_document') }}">
                                <input type="hidden" name="type_id" value="{{ document_type.id }}">

                                {% for message in app.flashes('error') %}
                                    <div class="alert alert-danger">{{ message }}</div>
                                {% endfor %}

                                {% for message in app.flashes('success') %}
                                    <div class="alert alert-success">{{ message }}</div>
                                {% endfor %}

                                <div class="row">
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label for="document_name">Название документа <span class="text-danger">*</span></label>
                                            <input type="text" id="document_name" class="form-control" placeholder="Введите название документа" name="name" value="{{ form_data.name|default('') }}" required>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label for="document_description">Описание</label>
                                            <textarea id="document_description" class="form-control" placeholder="Введите описание документа" name="description" rows="4">{{ form_data.description|default('') }}</textarea>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            {% if is_admin|default(false) %}
                                                <label for="organization_id">Организация отправитель<span class="text-danger">*</span></label>
                                                <select id="organization_id" class="form-control" name="organization_id" required>
                                                    {% if organizations is defined and organizations|length > 0 %}
                                                        {% for org in organizations %}
                                                            {% if org %}
                                                                {% include 'auth/organization_tree_option.html.twig' with {'organization': org, 'level': 0, 'selected_id': form_data.organization_id|default('')} %}
                                                            {% endif %}
                                                        {% endfor %}
                                                    {% else %}
                                                        <option value="">Организации не найдены</option>
                                                    {% endif %}
                                                </select>
                                            {% else %}
                                                <label for="organization_id">Организация отправитель</label>
                                                {% if user_organization|default(null) %}
                                                    <input type="hidden" name="organization_id" value="{{ user_organization.id }}">
                                                    <input type="text" id="organization_id" class="form-control" value="{{ user_organization.shortName }}" readonly disabled>
                                                {% else %}
                                                    <p class="form-control-plaintext text-muted mb-0">Организация не назначена. Обратитесь к администратору.</p>
                                                {% endif %}
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label class="mt-3" for="document_users">Пользователи (получатели)</label>
                                            <div id="document_users_trigger" style="cursor: pointer;" title="Нажмите, чтобы выбрать по организациям">
                                                <select id="document_users" class="form-control" name="user_ids[]" multiple>
                                                    {% if users is defined and users|length > 0 %}
                                                        {% for user in users %}
                                                            <option value="{{ user.id }}" selected>
                                                                {{ user.lastname }} {{ user.firstname }}{% if user.patronymic %} {{ user.patronymic }}{% endif %}
                                                            </option>
                                                        {% endfor %}
                                                    {% endif %}
                                                </select>
                                            </div>
                                            <small class="text-muted">Нажмите на поле или кнопку ниже, чтобы выбрать получателей по организациям</small>
                                            <div class="mt-1">
                                                <button type="button"
                                                        class="btn btn-outline-secondary btn-sm"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#organizationUserModal">
                                                    Выбрать по организациям
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label class="d-block mt-3">Статус документа</label>
                                            {% for value, label in document_statuses %}
                                                <div class="form-check">
                                                    <input type="radio" id="document_status_{{ value }}" class="form-check-input" name="status" value="{{ value }}" {% if form_data.status|default('NEW') == value %}checked{% endif %} required>
                                                    <label class="form-check-label" for="document_status_{{ value }}">{{ label }}</label>
                                                </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group mt-3">
                                            <label for="document_deadline">Срок выполнения</label>
                                            <input type="date" id="document_deadline" class="form-control" name="deadline" value="{{ form_data.deadline|default("now"|date_modify("+1 week")|date("Y-m-d")) }}">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label class="d-block mt-3">Публикация докуента</label>
                                        </div>
                                        <div class="form-check">
                                            <input type="checkbox" id="document_is_published" class="form-check-input" name="is_published" value="1" {% if form_data.is_published|default(false) %}checked{% endif %}>
                                            <label class="form-check-label" for="document_is_published">Опубликовать документ</label>
                                        </div>
                                    </div>

                                    <div class="col-12">
                                        <div class="form-group mt-3">
                                            <label class="d-block mb-2">Файлы документа</label>
                                            <input type="file" id="document_files_input" name="files[]" multiple class="d-none">
                                            <div id="document_files_dropzone" class="document-create-filedrop rounded" role="button" tabindex="0">
                                                <span class="document-create-filedrop-text">Перетащите файлы сюда или нажмите для выбора</span>
                                            </div>
                                            <ul id="document_files_list" class="list-group list-group-flush mt-2 small"></ul>
                                            <small class="text-muted">При ошибке валидации файлы нужно будет выбрать заново.</small>
                                        </div>
                                    </div>

                                    <div class="col-12 d-flex justify-content-end">
                                        <button type="submit" class="btn btn-primary me-1 mb-1">Создать документ</button>
                                        <a href="{{ path('app_new_document') }}" class="btn btn-light-secondary me-1 mb-1">Отмена</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div id="org-tree-data" data-users-url-template="{{ path('app_document_org_users', {'id': 0})|replace({'0':'__ORG__'}) }}">
        {% if organizations is defined and organizations|length > 0 %}
            {% for org in organizations %}
                {% if org %}
                    {% include 'document/_organization_tree_data.html.twig' with {'organization': org} %}
                {% endif %}
            {% endfor %}
        {% endif %}
    </div>

    {% include 'document/partials/_organization_user_modal.html.twig' %}

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const usersSelect = document.getElementById('document_users');
            const usersTrigger = document.getElementById('document_users_trigger');
            let choicesInstance = null;

            if (usersSelect && window.Choices) {
                choicesInstance = new Choices(usersSelect, {
                    removeItemButton: true,
                    searchEnabled: false,
                    itemSelectText: '',
                    noChoicesText: 'Нажмите на поле или «Выбрать по организациям»',
                });
            }

            if (usersTrigger) {
                usersTrigger.addEventListener('click', function (e) {
                    if (e.target.closest('.choices__button') || e.target.closest('.choices__item')) {
                        return;
                    }
                    e.preventDefault();
                    var modalEl = document.getElementById('organizationUserModal');
                    if (modalEl) {
                        var modal = bootstrap.Modal.getOrCreateInstance(modalEl);
                        modal.show();
                    }
                });
            }

            window.__documentFlowOrgUserModalChoices = choicesInstance;

            (function () {
                var input = document.getElementById('document_files_input');
                var dropzone = document.getElementById('document_files_dropzone');
                if (!input || !dropzone) return;

                function formatSize(bytes) {
                    if (bytes === 0) return '0 Б';
                    var k = 1024;
                    var sizes = ['Б', 'КБ', 'МБ', 'ГБ'];
                    var i = Math.floor(Math.log(bytes) / Math.log(k));
                    return parseFloat((bytes / Math.pow(k, i)).toFixed(1)) + ' ' + sizes[i];
                }

                function renderList() {
                    var listEl = document.getElementById('document_files_list');
                    listEl.innerHTML = '';
                    var files = input.files;
                    for (var i = 0; i < files.length; i++) {
                        (function (idx) {
                            var file = files[idx];
                            var li = document.createElement('li');
                            li.className = 'list-group-item d-flex align-items-center gap-2';
                            li.innerHTML = '<span class="flex-shrink-0 text-muted"><i class="bi bi-file-earmark"></i></span>' +
                                '<span class="flex-grow-1 text-truncate" title="' + (file.name || '').replace(/"/g, '&quot;') + '">' + (file.name || '—') + '</span>' +
                                '<span class="flex-shrink-0 text-muted small">' + formatSize(file.size) + '</span>' +
                                '<button type="button" class="btn btn-sm btn-outline-danger flex-shrink-0" data-index="' + idx + '" aria-label="Удалить">×</button>';
                            li.querySelector('button').addEventListener('click', function () {
                                var dt = new DataTransfer();
                                for (var j = 0; j < files.length; j++) { if (j !== idx) dt.items.add(files[j]); }
                                input.files = dt.files;
                                renderList();
                            });
                            listEl.appendChild(li);
                        })(i);
                    }
                }

                dropzone.addEventListener('click', function () { input.click(); });
                dropzone.addEventListener('keydown', function (e) { if (e.key === 'Enter' || e.key === ' ') { e.preventDefault(); input.click(); } });

                dropzone.addEventListener('dragover', function (e) {
                    e.preventDefault();
                    e.stopPropagation();
                    dropzone.classList.add('document-create-filedrop-dragover');
                });
                dropzone.addEventListener('dragleave', function (e) {
                    e.preventDefault();
                    e.stopPropagation();
                    dropzone.classList.remove('document-create-filedrop-dragover');
                });
                dropzone.addEventListener('drop', function (e) {
                    e.preventDefault();
                    e.stopPropagation();
                    dropzone.classList.remove('document-create-filedrop-dragover');
                    var dt = e.dataTransfer;
                    if (!dt || !dt.files || !dt.files.length) return;
                    var existing = input.files;
                    var newDt = new DataTransfer();
                    for (var i = 0; i < existing.length; i++) newDt.items.add(existing[i]);
                    for (var j = 0; j < dt.files.length; j++) newDt.items.add(dt.files[j]);
                    input.files = newDt.files;
                    renderList();
                });

                input.addEventListener('change', renderList);
            })();
        });
    </script>
    {% include 'document/partials/_organization_user_modal_script.html.twig' %}
{% endblock %}
