{% extends 'base_dashboard.html.twig' %}

{% block title %}Новая организация!{% endblock %}



{% block sidebar_list %}
    {% include 'sidebar/sidebar_list.html.twig' %}
{% endblock %}



{% block main %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Новая организация</h1>
        <a href="{{ path('app_all_organizations') }}" class="btn btn-secondary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-left">
                <line x1="19" y1="12" x2="5" y2="12"></line>
                <polyline points="12 19 5 12 12 5"></polyline>
            </svg>
            Назад к списку
        </a>
    </div>

    <section id="multiple-column-form">
        <div class="row match-height">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Форма создания организации</h4>
                    </div>
                    <div class="card-content">
                        <div class="card-body">
                            <form action="{{ path('create_organization') }}" method="post" class="form">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('create_organization') }}">

                                {% for message in app.flashes('success') %}
                                    <div class="alert alert-success">{{ message }}</div>
                                {% endfor %}

                                {% for message in app.flashes('error') %}
                                    <div class="alert alert-danger">{{ message }}</div>
                                {% endfor %}

                                {% set current_type = form_data.discriminator|default('organization') %}
                                <div class="row mb-3">
                                    <div class="col-12">
                                        <label class="form-label d-block">Тип создаваемой единицы <span class="text-danger">*</span></label>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="discriminator" id="disc_organization" value="organization" {{ current_type == 'organization' ? 'checked' : '' }}>
                                            <label class="form-check-label" for="disc_organization">Организация</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="discriminator" id="disc_filial" value="filial" {{ current_type == 'filial' ? 'checked' : '' }}>
                                            <label class="form-check-label" for="disc_filial">Филиал</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="discriminator" id="disc_department" value="department" {{ current_type == 'department' ? 'checked' : '' }}>
                                            <label class="form-check-label" for="disc_department">Департамент</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">

                                    {% if organizations is defined and organizations|length > 0 %}
                                    <div class="col-12">
                                        <div class="form-group" id="parent-group">
                                            <label for="parent_id">Родительская организация <span class="text-danger parent-required" style="display:{{ current_type in ['filial', 'department'] ? 'inline' : 'none' }}">*</span></label>
                                            <input type="hidden" id="organization_id" name="parent_id" value="{{ form_data.parent_id|default('') }}">
                                            <div class="input-group">
                                                <input type="text" id="org-display" class="form-control" readonly placeholder="— Без родительской организации —" value="" style="cursor:pointer" data-bs-toggle="modal" data-bs-target="#orgPickerModal">
                                                <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#orgPickerModal">
                                                    <i class="bi bi-building"></i> Выбрать
                                                </button>
                                                <button type="button" class="btn btn-outline-secondary" id="clear-parent-btn" style="display:none;">
                                                    <i class="bi bi-x-lg"></i>
                                                </button>
                                            </div>
                                            <small class="form-text text-muted parent-hint-default" style="display:{{ current_type in ['filial', 'department'] ? 'none' : 'inline' }}">Если не выбрана — будет создана как главная организация.</small>
                                            <small class="form-text text-danger parent-hint-required" style="display:{{ current_type in ['filial', 'department'] ? 'inline' : 'none' }}">Для филиала или департамента необходимо выбрать организацию или филиал.</small>
                                        </div>
                                    </div>
                                    {% endif %}

                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label for="short_name">Короткое название <span class="text-danger">*</span></label>
                                            <input type="text" id="short_name" class="form-control" placeholder="Короткое название" name="short_name" value="{{ form_data.short_name|default('') }}" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label for="full_name">Полное название <span class="text-danger">*</span></label>
                                            <input type="text" id="full_name" class="form-control" placeholder="Полное название" name="full_name" value="{{ form_data.full_name|default('') }}" required>
                                        </div>
                                    </div>

                                    <div class="col-12">
                                        <div class="form-group">
                                            <label for="description">Описание</label>
                                            <textarea id="description" class="form-control" name="description" rows="3" placeholder="Описание организации">{{ form_data.description|default('') }}</textarea>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label for="legal_address">Юридический адрес</label>
                                            <input type="text" id="legal_address" class="form-control" name="legal_address" placeholder="Юридический адрес" value="{{ form_data.legal_address|default('') }}">
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label for="actual_address">Фактический адрес</label>
                                            <input type="text" id="actual_address" class="form-control" name="actual_address" placeholder="Фактический адрес" value="{{ form_data.actual_address|default('') }}">
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label for="phone">Телефон</label>
                                            <input type="text" id="phone" class="form-control" name="phone" placeholder="+7 (___) ___ __ __" value="{{ form_data.phone|default('') }}" inputmode="tel" maxlength="18" autocomplete="tel">
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label for="email">Email</label>
                                            <input type="email" id="email" class="form-control" name="email" placeholder="email@example.com" value="{{ form_data.email|default('') }}">
                                        </div>
                                    </div>
                                    <div class="col-12"><hr class="my-3"><h5 class="mb-2">Реквизиты и банк</h5></div>
                                    <div class="col-md-4 col-12">
                                        <div class="form-group">
                                            <label for="inn">ИНН</label>
                                            <input type="text" id="inn" class="form-control" name="inn" placeholder="10 или 12 цифр" value="{{ form_data.inn|default('') }}" maxlength="12" inputmode="numeric" autocomplete="off">
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-12">
                                        <div class="form-group">
                                            <label for="kpp">КПП</label>
                                            <input type="text" id="kpp" class="form-control" name="kpp" placeholder="9 цифр" value="{{ form_data.kpp|default('') }}" maxlength="9" inputmode="numeric" autocomplete="off">
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-12">
                                        <div class="form-group">
                                            <label for="ogrn">ОГРН / ОГРНИП</label>
                                            <input type="text" id="ogrn" class="form-control" name="ogrn" placeholder="13 или 15 цифр" value="{{ form_data.ogrn|default('') }}" maxlength="15" inputmode="numeric" autocomplete="off">
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label for="registration_date">Дата регистрации</label>
                                            <input type="date" id="registration_date" class="form-control" name="registration_date" value="{{ form_data.registration_date|default('') }}">
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label for="tax_type">Тип налогообложения</label>
                                            <select id="tax_type" class="form-control" name="tax_type">
                                                <option value="">— Не указано —</option>
                                                {% for value, label in tax_type_choices|default([]) %}
                                                    <option value="{{ value }}" {{ (form_data.tax_type|default('')) == value ? 'selected' : '' }}>{{ label }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label for="registration_organ">Орган регистрации</label>
                                            <input type="text" id="registration_organ" class="form-control" name="registration_organ" placeholder="Например: ИФНС № 5 по г. Москве" value="{{ form_data.registration_organ|default('') }}">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label for="bank_name">Наименование банка</label>
                                            <input type="text" id="bank_name" class="form-control" name="bank_name" placeholder="Наименование банка" value="{{ form_data.bank_name|default('') }}">
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label for="bik">БИК</label>
                                            <input type="text" id="bik" class="form-control" name="bik" placeholder="9 цифр" value="{{ form_data.bik|default('') }}" maxlength="9" inputmode="numeric" autocomplete="off">
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label for="bank_account">Расчётный счёт</label>
                                            <input type="text" id="bank_account" class="form-control" name="bank_account" placeholder="20 цифр" value="{{ form_data.bank_account|default('') }}" maxlength="20" inputmode="numeric" autocomplete="off">
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-12 d-flex justify-content-end">
                                        <button type="submit" class="btn btn-primary me-1 mb-1">Создать организацию</button>
                                        <a href="{{ path('app_all_organizations') }}" class="btn btn-secondary me-1 mb-1">Отмена</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {% if organizations is defined and organizations|length > 0 %}
        <div id="org-tree-data" class="d-none">
            {% for org in organizations %}
                {% if org %}
                    {% include 'document/_organization_tree_data.html.twig' with {'organization': org} %}
                {% endif %}
            {% endfor %}
        </div>

        {% include 'organization/partials/_org_tree_modal.html.twig' %}
        {% include 'organization/partials/_org_tree_modal_script.html.twig' %}

        <script>
            document.addEventListener('DOMContentLoaded', function () {
                var clearBtn = document.getElementById('clear-parent-btn');
                var hiddenInput = document.getElementById('organization_id');
                var displayInput = document.getElementById('org-display');
                if (!clearBtn || !hiddenInput || !displayInput) return;

                function updateClearBtn() {
                    clearBtn.style.display = hiddenInput.value ? '' : 'none';
                }

                clearBtn.addEventListener('click', function () {
                    hiddenInput.value = '';
                    displayInput.value = '';
                    updateClearBtn();
                    var tree = document.getElementById('org-tree');
                    if (tree) {
                        var sel = tree.querySelector('.org-tree-item.selected');
                        if (sel) sel.classList.remove('selected');
                    }
                    var selectBtn = document.getElementById('org-select-btn');
                    if (selectBtn) selectBtn.disabled = true;
                });

                // Show clear button when modal closes (org was selected)
                var modal = document.getElementById('orgPickerModal');
                if (modal) {
                    modal.addEventListener('hidden.bs.modal', function () {
                        updateClearBtn();
                    });
                }

                updateClearBtn();

                // Показать/скрыть обязательность родителя при выборе типа
                var discOrganization = document.getElementById('disc_organization');
                var discFilial = document.getElementById('disc_filial');
                var discDepartment = document.getElementById('disc_department');
                var parentRequiredStar = document.querySelector('.parent-required');
                var parentHintDefault = document.querySelector('.parent-hint-default');
                var parentHintRequired = document.querySelector('.parent-hint-required');

                function updateParentRequired() {
                    var needParent = (discFilial && discFilial.checked) || (discDepartment && discDepartment.checked);
                    if (parentRequiredStar) parentRequiredStar.style.display = needParent ? 'inline' : 'none';
                    if (parentHintDefault) parentHintDefault.style.display = needParent ? 'none' : 'inline';
                    if (parentHintRequired) parentHintRequired.style.display = needParent ? 'inline' : 'none';
                }
                if (discOrganization) discOrganization.addEventListener('change', updateParentRequired);
                if (discFilial) discFilial.addEventListener('change', updateParentRequired);
                if (discDepartment) discDepartment.addEventListener('change', updateParentRequired);
                updateParentRequired();
            });
        </script>
    {% endif %}

    {% include 'organization/partials/_script_organization_form_validation.html.twig' %}

{% endblock %}
