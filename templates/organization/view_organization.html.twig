{% extends 'base_dashboard.html.twig' %}

{% block title %}Просмотр организации!{% endblock %}

{# Рекурсивный макрос для отображения дерева организаций в виде аккордеона. from_org — организация, с которой переходят (текущая страница). #}
{% macro renderOrganizationTree(organization, level, from_org) %}
    {% import _self as self %}
    {% set collapseId = 'org-collapse-' ~ organization.id ~ '-' ~ level %}
    <div class="org-tree-item mb-1">
        <div class="d-flex align-items-center gap-2 py-2 px-2 rounded org-tree-row">
            {% if organization.childOrganizations|length > 0 %}
                <button class="btn btn-link btn-sm p-0 org-tree-toggle" type="button"
                        data-bs-toggle="collapse" data-bs-target="#{{ collapseId }}"
                        aria-expanded="false" aria-controls="{{ collapseId }}"
                        style="min-width: 24px; text-decoration: none;">
                    <i class="bi bi-chevron-right org-tree-icon" style="transition: transform 0.2s;"></i>
                </button>
            {% else %}
                <span class="d-inline-block" style="width: 24px;"></span>
            {% endif %}
            <a href="{{ path('view_organization', {'id': organization.id, 'from': from_org.id}) }}"
               class="flex-grow-1 text-decoration-none org-tree-link fw-medium"
               style="font-size: 15px;">
                {{ organization.name }}
            </a>
            {% if organization.childOrganizations|length > 0 %}
                <span class="badge org-tree-badge">{{ organization.childOrganizations|length }}</span>
            {% endif %}
        </div>
        {% if organization.childOrganizations|length > 0 %}
            <div class="collapse" id="{{ collapseId }}">
                <div class="ps-2 border-start border-2 org-tree-border ms-2 mt-1">
                    {% for childOrg in organization.childOrganizations %}
                        {{ self.renderOrganizationTree(childOrg, level + 1, from_org) }}
                    {% endfor %}
                </div>
            </div>
        {% endif %}
    </div>
{% endmacro %}



{% block sidebar_list %}
    {% include 'sidebar/sidebar_list.html.twig' %}
{% endblock %}



{% block main %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Просмотр организации</h1>
        {% if back_organization %}
            <a href="{{ path('view_organization', {id: back_organization.id}) }}" class="btn btn-secondary rounded-pill" title="Вернуться к {{ back_organization.name }}">
                <i class="bi bi-arrow-left"></i> Назад к «{{ back_organization.name }}»
            </a>
        {% else %}
            <a href="{{ path('app_all_organizations') }}" class="btn btn-secondary rounded-pill">
                <i class="bi bi-arrow-left"></i> Назад к списку
            </a>
        {% endif %}
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

        <script>
            Swal.fire({
                title: "{{ message }}",
                icon: "success"
            });
        </script>
    {% endfor %}

    <section class="section">
        <div class="row">
            <div class="col-12">
                {# Информация об организации #}
                <div class="card mb-4">
                    <div class="card-header">
                        <h4 class="card-title">Информация об организации</h4>
                    </div>
                    <div class="card-content">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <table class="table table-borderless">
                                        <tr>
                                            <th>Название:</th>
                                            <td><strong>{{ organization.name }}</strong></td>
                                        </tr>
                                        <tr>
                                            <th>Описание:</th>
                                            <td>{{ organization.description ?? '-' }}</td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-md-6">
                                    <table class="table table-borderless">
                                        <tr>
                                            <th width="200">Адрес:</th>
                                            <td>{{ organization.address ?? '-' }}</td>
                                        </tr>
                                        <tr>
                                            <th>Телефон:</th>
                                            <td>{{ organization.phone ?? '-' }}</td>
                                        </tr>
                                        <tr>
                                            <th>Email:</th>
                                            <td>{{ organization.email ?? '-' }}</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                {# Дочерние организации в виде дерева #}
                {% if organization.childOrganizations|length > 0 %}
                    {% import _self as self %}
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4 class="card-title">
                                Структура подразделения
                                <span class="badge bg-success ms-2">{{ organization.childOrganizations|length }}</span>
                            </h4>
                        </div>
                        <div class="card-content">
                            <div class="card-body">
                                <div style="font-size: 15px; line-height: 2; padding: 10px 0;">
                                    {% for childOrg in organization.childOrganizations %}
                                        {{ self.renderOrganizationTree(childOrg, 0, organization) }}
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}

                {# Работники организации #}
                <div class="card mb-4">
                    <div class="card-header">
                        <h4 class="card-title">
                            Работники подразделения
                            <span class="badge bg-primary ms-2">{{ users|length }}</span>
                        </h4>
                    </div>
                    <div class="card-content">
                        <div class="card-body">
                            {% if users|length > 0 %}
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0">
                                        <thead>
                                            <tr>
                                                <th>ФИО</th>
                                                <th>Статус</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for user in users %}
                                                <tr data-user-id="{{ user.id }}" role="button" tabindex="0">
                                                    <td class="text-bold-500">
                                                        {{ user.lastname ?? '-' }} {{ user.firstname ?? '-' }}{% if user.patronymic %} {{ user.patronymic }}{% endif %}
                                                    </td>
                                                    <td><span class="badge bg-secondary">{{ user.userEmployeeStatus.getLabel() }}</span></td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            {% else %}
                                <p class="text-muted mb-0">В организации пока нет пользователей.</p>
                            {% endif %}
                        </div>
                    </div>
                </div>

            </div>
        </div>



        <div class="d-flex justify-content-end gap-2 mt-4">

            <a href="{{ path('edit_organization', {id: organization.id}) }}" class="btn btn-primary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit">
                    <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                    <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                </svg>
                Редактировать организацию
            </a>

            <form id="delete-organization-form" method="post" action="{{ path('app_delete_organization', {id: organization.id}) }}" class="d-inline">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('delete_organization_' ~ organization.id) }}">
                <button type="submit" class="btn btn-danger" id="delete-organization-btn">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="3 6 5 6 21 6"></polyline>
                        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                        <line x1="10" y1="11" x2="10" y2="17"></line>
                        <line x1="14" y1="11" x2="14" y2="17"></line>
                    </svg>
                    Удалить организацию
                </button>
            </form>

        </div>

    </section>

    {% include 'user/partials/_modal_view_user.html.twig' %}

    <style>
        .table-hover tbody tr[data-user-id] { cursor: pointer; }
        /* Дерево организаций — светлая тема */
        .org-tree-row { background: rgba(0,0,0,0.02); }
        .org-tree-row:hover { background: rgba(0,0,0,0.04) !important; }
        .org-tree-toggle { color: #6c757d !important; }
        .org-tree-link { color: #212529; }
        .org-tree-link:hover { color: #0d6efd !important; }
        .org-tree-badge { background: #e9ecef; color: #212529; }
        .org-tree-border { border-color: #e9ecef !important; }
        .org-tree-toggle[aria-expanded="true"] .org-tree-icon { transform: rotate(90deg); }
        /* Дерево организаций — тёмная тема */
        [data-bs-theme="dark"] .org-tree-row { background: rgba(255,255,255,0.05); }
        [data-bs-theme="dark"] .org-tree-row:hover { background: rgba(255,255,255,0.08) !important; }
        [data-bs-theme="dark"] .org-tree-toggle { color: #adb5bd !important; }
        [data-bs-theme="dark"] .org-tree-link { color: #e9ecef; }
        [data-bs-theme="dark"] .org-tree-link:hover { color: #6ea8fe !important; }
        [data-bs-theme="dark"] .org-tree-badge { background: rgba(255,255,255,0.15); color: #fff; }
        [data-bs-theme="dark"] .org-tree-border { border-color: rgba(255,255,255,0.15) !important; }
    </style>
    <script>
        document.querySelectorAll('tr[data-user-id]').forEach(function (row) {
            row.addEventListener('keydown', function (e) {
                if (e.key === 'Enter' || e.key === ' ') {
                    e.preventDefault();
                    window.openUserViewModal(this.dataset.userId);
                }
            });
        });
    </script>
    <script>
        (function () {
            var form = document.getElementById('delete-organization-form');
            if (!form) return;
            form.addEventListener('submit', function (e) {
                e.preventDefault();
                var countdown = 10;
                var countdownEl;
                var intervalId;
                Swal.fire({
                    title: "Удалить организацию?",
                    html: "Дочерние организации станут корневыми.<br><strong>Удаление через <span id=\"delete-countdown\">10</span> сек.</strong>",
                    icon: "warning",
                    showCancelButton: true,
                    cancelButtonText: "Отмена",
                    showConfirmButton: false,
                    didOpen: function () {
                        countdownEl = document.getElementById('delete-countdown');
                        intervalId = setInterval(function () {
                            countdown--;
                            if (countdownEl) countdownEl.textContent = countdown;
                            if (countdown <= 0) {
                                clearInterval(intervalId);
                                Swal.close();
                                form.submit();
                            }
                        }, 1000);
                    },
                    didClose: function () {
                        clearInterval(intervalId);
                    }
                });
            });
        })();
    </script>
{% endblock %}
