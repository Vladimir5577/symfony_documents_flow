{% extends 'base_dashboard.html.twig' %}

{% block title %}Просмотр организации!{% endblock %}

{# Рекурсивный макрос для отображения дерева организаций в простом виде #}
{% macro renderOrganizationTree(organization, level) %}
    {% import _self as self %}
    {% set indent = level * 25 %}
    <div style="margin-left: {{ indent }}px; padding: 3px 0;">
        <span style="font-weight: 500; font-size: 15px;">
            — <a href="{{ path('view_organization', {'id': organization.id}) }}" 
                 style="text-decoration: none; color: inherit;"
                 onmouseover="this.style.color='#0d6efd';" 
                 onmouseout="this.style.color='inherit';">
                {{ organization.name }}
            </a>
        </span>
        {% if organization.childOrganizations|length > 0 %}
            {% for childOrg in organization.childOrganizations %}
                {{ self.renderOrganizationTree(childOrg, level + 1) }}
            {% endfor %}
        {% endif %}
    </div>
{% endmacro %}



{% block sidebar_list %}
    {% include 'sidebar/sidebar_list.html.twig' %}
{% endblock %}



{% block main %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Просмотр организации</h1>
        <a href="{{ path('app_all_organizations') }}" class="btn btn-secondary rounded-pill">
            <i class="bi bi-arrow-left"></i> Назад к списку
        </a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

        <script>
            Swal.fire({
                title: "Организация создана успешно!",
                text: "Можно добавить новых пользователей",
                icon: "success"
            });
        </script>
    {% endfor %}

    <section class="section">
        <div class="row">
            <div class="col-12">
                {# Информация об организации #}
                <div class="card mb-4">
                    <div class="card-header">
                        <h4 class="card-title">Информация об организации</h4>
                    </div>
                    <div class="card-content">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <table class="table table-borderless">
                                        <tr>
                                            <th width="200">ID:</th>
                                            <td>{{ organization.id }}</td>
                                        </tr>
                                        <tr>
                                            <th>Название:</th>
                                            <td><strong>{{ organization.name }}</strong></td>
                                        </tr>
                                        <tr>
                                            <th>Описание:</th>
                                            <td>{{ organization.description ?? '-' }}</td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-md-6">
                                    <table class="table table-borderless">
                                        <tr>
                                            <th width="200">Адрес:</th>
                                            <td>{{ organization.address ?? '-' }}</td>
                                        </tr>
                                        <tr>
                                            <th>Телефон:</th>
                                            <td>{{ organization.phone ?? '-' }}</td>
                                        </tr>
                                        <tr>
                                            <th>Email:</th>
                                            <td>{{ organization.email ?? '-' }}</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                {# Дочерние организации в виде дерева #}
                {% if organization.childOrganizations|length > 0 %}
                    {% import _self as self %}
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4 class="card-title">
                                Структура дочерних организаций
                                <span class="badge bg-success ms-2">{{ organization.childOrganizations|length }}</span>
                            </h4>
                        </div>
                        <div class="card-content">
                            <div class="card-body">
                                <div style="font-size: 15px; line-height: 2; padding: 10px 0;">
                                    {% for childOrg in organization.childOrganizations %}
                                        {{ self.renderOrganizationTree(childOrg, 0) }}
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}

                {# Департаменты #}
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">
                            Департаменты
                            <span class="badge bg-primary ms-2">{{ organization.departments|length }}</span>
                        </h4>
                    </div>
                    <div class="card-content">
                        {% if organization.departments|length > 0 %}
                            <div class="accordion" id="departmentsAccordion">
                                {% for department in organization.departments %}
                                    <div class="accordion-item">
                                        <h2 class="accordion-header" id="heading{{ department.id }}">
                                            <button class="accordion-button {% if not loop.first %}collapsed{% endif %}" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{ department.id }}" aria-expanded="{% if loop.first %}true{% else %}false{% endif %}" aria-controls="collapse{{ department.id }}">
                                                <div class="d-flex justify-content-between align-items-center w-100 me-3">
                                                    <div>
                                                        <strong>{{ department.name }}</strong>
                                                        <span class="badge bg-info ms-2">{{ department.departmentDivisions|length }} подразделений</span>
                                                    </div>
                                                </div>
                                            </button>
                                        </h2>
                                        <div id="collapse{{ department.id }}" class="accordion-collapse collapse {% if loop.first %}show{% endif %}" aria-labelledby="heading{{ department.id }}" data-bs-parent="#departmentsAccordion">
                                            <div class="accordion-body">
                                                {# Информация о департаменте #}
                                                <div class="mb-3">
                                                    <h5 class="mb-3">Информация о департаменте</h5>
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <table class="table table-sm table-borderless">
                                                                <tr>
                                                                    <th width="150">ID:</th>
                                                                    <td>{{ department.id }}</td>
                                                                </tr>
                                                                <tr>
                                                                    <th>Название:</th>
                                                                    <td><strong>{{ department.name }}</strong></td>
                                                                </tr>
                                                                <tr>
                                                                    <th>Описание:</th>
                                                                    <td>{{ department.description ?? '-' }}</td>
                                                                </tr>
                                                            </table>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <table class="table table-sm table-borderless">
                                                                <tr>
                                                                    <th width="150">Адрес:</th>
                                                                    <td>{{ department.address ?? '-' }}</td>
                                                                </tr>
                                                                <tr>
                                                                    <th>Телефон:</th>
                                                                    <td>{{ department.phone ?? '-' }}</td>
                                                                </tr>
                                                                <tr>
                                                                    <th>Email:</th>
                                                                    <td>{{ department.email ?? '-' }}</td>
                                                                </tr>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>

                                                {# Подразделения департамента #}
                                                <div class="mt-4">
                                                    <h5 class="mb-3">Подразделения департамента</h5>
                                                    {% if department.departmentDivisions|length > 0 %}
                                                        <div class="table-responsive">
                                                            <table class="table table-hover table-sm">
                                                                <thead>
                                                                <tr>
                                                                    <th>ID</th>
                                                                    <th>Название</th>
                                                                    <th>Описание</th>
                                                                    <th>Адрес</th>
                                                                    <th>Телефон</th>
                                                                    <th>Email</th>
                                                                </tr>
                                                                </thead>
                                                                <tbody>
                                                                {% for division in department.departmentDivisions %}
                                                                    <tr>
                                                                        <td>{{ division.id }}</td>
                                                                        <td><strong>{{ division.name }}</strong></td>
                                                                        <td>{{ division.description ?? '-' }}</td>
                                                                        <td>{{ division.address ?? '-' }}</td>
                                                                        <td>{{ division.phone ?? '-' }}</td>
                                                                        <td>{{ division.email ?? '-' }}</td>
                                                                    </tr>
                                                                {% endfor %}
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    {% else %}
                                                        <div class="alert alert-info mb-0">
                                                            <i class="bi bi-info-circle"></i> У этого департамента нет подразделений
                                                        </div>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="card-body">
                                <div class="alert alert-warning mb-0">
                                    <i class="bi bi-exclamation-triangle"></i> У этой организации нет департаментов
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
