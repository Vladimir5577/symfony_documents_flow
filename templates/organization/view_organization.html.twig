{% extends 'base_dashboard.html.twig' %}

{% block title %}Просмотр организации!{% endblock %}

{# Рекурсивный макрос для отображения дерева организаций в простом виде #}
{% macro renderOrganizationTree(organization, level) %}
    {% import _self as self %}
    {% set indent = level * 25 %}
    <div style="margin-left: {{ indent }}px; padding: 3px 0;">
        <span style="font-weight: 500; font-size: 15px;">
            — <a href="{{ path('view_organization', {'id': organization.id}) }}" 
                 style="text-decoration: none; color: inherit;"
                 onmouseover="this.style.color='#0d6efd';" 
                 onmouseout="this.style.color='inherit';">
                {{ organization.name }}
            </a>
        </span>
        {% if organization.childOrganizations|length > 0 %}
            {% for childOrg in organization.childOrganizations %}
                {{ self.renderOrganizationTree(childOrg, level + 1) }}
            {% endfor %}
        {% endif %}
    </div>
{% endmacro %}



{% block sidebar_list %}
    {% include 'sidebar/sidebar_list.html.twig' %}
{% endblock %}



{% block main %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Просмотр организации</h1>
        <a href="{{ path('app_all_organizations') }}" class="btn btn-secondary rounded-pill">
            <i class="bi bi-arrow-left"></i> Назад к списку
        </a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

        <script>
            Swal.fire({
                title: "Организация создана успешно!",
                text: "Можно добавить новых пользователей",
                icon: "success"
            });
        </script>
    {% endfor %}

    <section class="section">
        <div class="row">
            <div class="col-12">
                {# Информация об организации #}
                <div class="card mb-4">
                    <div class="card-header">
                        <h4 class="card-title">Информация об организации</h4>
                    </div>
                    <div class="card-content">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <table class="table table-borderless">
                                        <tr>
                                            <th width="200">ID:</th>
                                            <td>{{ organization.id }}</td>
                                        </tr>
                                        <tr>
                                            <th>Название:</th>
                                            <td><strong>{{ organization.name }}</strong></td>
                                        </tr>
                                        <tr>
                                            <th>Описание:</th>
                                            <td>{{ organization.description ?? '-' }}</td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-md-6">
                                    <table class="table table-borderless">
                                        <tr>
                                            <th width="200">Адрес:</th>
                                            <td>{{ organization.address ?? '-' }}</td>
                                        </tr>
                                        <tr>
                                            <th>Телефон:</th>
                                            <td>{{ organization.phone ?? '-' }}</td>
                                        </tr>
                                        <tr>
                                            <th>Email:</th>
                                            <td>{{ organization.email ?? '-' }}</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                {# Дочерние организации в виде дерева #}
                {% if organization.childOrganizations|length > 0 %}
                    {% import _self as self %}
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4 class="card-title">
                                Структура дочерних организаций
                                <span class="badge bg-success ms-2">{{ organization.childOrganizations|length }}</span>
                            </h4>
                        </div>
                        <div class="card-content">
                            <div class="card-body">
                                <div style="font-size: 15px; line-height: 2; padding: 10px 0;">
                                    {% for childOrg in organization.childOrganizations %}
                                        {{ self.renderOrganizationTree(childOrg, 0) }}
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}

            </div>
        </div>
    </section>
{% endblock %}
